    }

    .ClientReview_Pfp {
        width: 70px;
    }

        .ClientReview_Pfp img {
            border-radius: 50%;
            width: 100%;
            height: auto;
        }

    .ClientReview_Stars {
        font-size: 36px;
        padding-left: 20px;
        color: #ffbf00;
    }

    .ClientReview_Body {
        padding-bottom: 20px;
    }

    .ClientReview_Name {
        color: #13588F;
        font-size: 18px;
        padding-bottom: 40px;
    }

    .ClientReview_Img img {
        filter: brightness(0) invert(1) sepia(1) saturate(10000%) hue-rotate(180deg) brightness(1.1);
