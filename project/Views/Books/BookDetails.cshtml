@model BookViewModel
@{
    ViewData["Title"] = "BookDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .comment-section {
        max-height: 400px; /* Adjust this value as needed */
        overflow-y: auto;
        padding: 10px; /* Optional, for padding around the content */
        border: 1px solid #ddd; /* Optional, for visual separation */
        border-radius: 8px; /* Optional, for rounded corners */
        background-color: #f9f9f9; /* Optional, for background color */
    }

        .comment-section hr {
            margin: 10px 0; /* Optional, for spacing around the horizontal rule */
        }

</style>


<h2>BookDetails</h2>

<div class="container-fluid mt-2 mb-3">
    <div class="row no-gutters">
        <!-- Left Column -->
        <div class="col-md-5 pr-2">
            <div class="card">
                <div class="demo">
                    <ul id="lightSlider">
                        <!-- Example image, replace with your book cover image URL -->
                        <li><img src="@Model.Book.PhotoUrl" height="300" /></li>
                    </ul>
                </div>
            </div>

            <!-- Reviews Section -->
            <div class="card mt-2">
                <h6>Reviews</h6>
                <div class="d-flex flex-row">
                    <div class="stars">
                        @for (var i = 0; i < 5; i++)
                        {
                            <i class="fa fa-star @(i < Model.AverageRating ? "checked" : "")"></i>
                        }
                    </div>
                    <span class="ml-1 font-weight-bold">@Model.ReviewCount reviews</span>
                </div>
                <hr> 
                <div class="badges">
                    <span class="badge bg-dark">All</span>
                    <span class="badge bg-dark"><i class="fa fa-image"></i></span>
                    <span class="badge bg-dark"><i class="fa fa-comments-o"></i></span>
                    <span class="badge bg-warning">
                        @for (var i = 0; i < Model.AverageRating; i++)
                        {
                            <i class="fa fa-star"></i>
                        }
                        <span class="ml-1">@Model.AverageRating</span>
                    </span>
                </div>
                <hr> 

             

